{
  "name": "expressive",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "dcr:test:eslint": "docker-compose run --rm app npm run test:eslint",
    "dcr:test": "docker-compose run --rm app npm run test",
    "dcr:sh": "docker-compose run --rm app sh",
    "test:eslint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -p tsconfig.build.json -w\" \"tsc-alias -p tsconfig.build.json -w\" \"fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js\"",
    "migration:run": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
    "migration:generate": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:generate",
    "migration:create": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:create"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "@types/async": "^3.2.12",
    "async": "^3.2.3",
    "debug": "^4.3.3",
    "fastify": "^3.29.2",
    "fastify-autoload": "^3.13.0",
    "fastify-bcrypt": "^1.0.0",
    "fastify-cli": "^2.15.0",
    "fastify-cookie": "^5.7.0",
    "fastify-jwt": "^4.2.0",
    "fastify-plugin": "^3.0.1",
    "fastify-postgres": "^3.7.0",
    "fastify-sensible": "^3.2.0",
    "fastify-typeorm-plugin": "^2.2.1",
    "pg": "^8.7.3",
    "reading-time": "^1.5.0",
    "typeorm": "^0.3.9",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^9.1.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.0.0",
    "@types/node": "^17.0.8",
    "@types/sinonjs__fake-timers": "^8.1.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "concurrently": "^7.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "fastify-tsconfig": "^1.0.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.6.0",
    "typescript": "^4.5.4"
  }
}
